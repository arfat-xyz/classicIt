  "lint-staged": {
    "src/**/*.ts": "yarn lint-prettier"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-status": "^1.7.3",
